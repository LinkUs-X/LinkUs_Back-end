<p id="notice"><%= notice %></p>

<h1>Links of all users</h1>

<table>
  <thead>
    <tr>
      <th>Link Id</th>
      <th>User Id</th>
      <th>User login</th>
      <th>Card Id</th>
      <th>Contact Name</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @links.each do |link| %>
      <tr>
        <td><%= link.id %></td>  
        <td><%= link.user_id %></td>
        <td><%= User.find(link.user_id).login %></td>
        <td><%= link.card_id %></td>
        <td><%= User.find(Card.find(link.card_id).user_id).login %></td>
        <td><%= link.lat %></td>
        <td><%= link.lng %></td>
        <td><%= link.created_at %></td>
        <td><%= link.updated_at %></td>
        <td><%= link_to 'Show Link', link %></td>
        <td><%= link_to 'Destroy', link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Select a user to create a new link', users_path %>